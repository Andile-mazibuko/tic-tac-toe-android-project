<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn00"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="96dp"
        android:textSize="60sp"
        android:text=""
        android:onClick="buttonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn01"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="96dp"
        android:text=""
        android:onClick="buttonClicked"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/btn02"
        app:layout_constraintStart_toEndOf="@+id/btn00"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn02"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="2dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn00" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintEnd_toStartOf="@+id/btn12"
        app:layout_constraintStart_toEndOf="@+id/btn10"
        app:layout_constraintTop_toBottomOf="@+id/btn01" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn02" />

    <Button
        android:id="@+id/btn20"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn10" />


    <Button
        android:id="@+id/btn21"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonClicked"
        android:text=""
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/btn22"
        app:layout_constraintStart_toEndOf="@+id/btn20"
        app:layout_constraintTop_toBottomOf="@+id/btn11" />

    <Button
        android:id="@+id/btn22"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:text=""
        android:textSize="60sp"
        android:onClick="buttonClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn12" />

    <Button
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="Replay"
        android:onClick="replay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn21" />

</androidx.constraintlayout.widget.ConstraintLayout>